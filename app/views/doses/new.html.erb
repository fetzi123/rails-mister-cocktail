<div class="container">
  <h3 class="text-center">Add an ingredient</h1>
  <div class="row">
    <div>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient%>
      <%= f.input :description %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
      <div>
        <%= link_to "Go back", cocktails_path, class: "card-link" %>
      </div>
    </div>
  </div>
</div>
