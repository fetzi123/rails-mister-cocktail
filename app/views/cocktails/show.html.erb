<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://www.seekpng.com/png/detail/25-254033_cocktail-glass-drawing-png.png" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", cocktails_path, class: "nav-link" %>
      </li>
      <%= link_to "Add your cocktail", new_cocktail_path, class: "btn btn-primary pad20" %>
    </ul>
  </div>
</div>
<div class="container">
  <!-- Heading -->
  <h1 class="mt-4"> <%= @cocktail.name %> </h1>
    <%= cl_image_tag @cocktail.photo.key, height: 400, width: 300, crop: :fill %>
  <!-- Ingredient heading -->
  <div class="mt-4">
    <% if @cocktail.doses.empty? %>
    <p class="text-gray">
      No ingredients yet. Add yours!
    </p>
    <% else %>
    <h3> Ingredients </h2>
      <% end %>
  </div>
  <!-- Ingredient list -->
  <ul class="list-unstyled">
    <% @cocktail.doses.each do |d| %>
    <li>
      <i><%= d.ingredient.name %> | <%= d.description %></i>
      <%= link_to "Delete", dose_path(d), class: "btn btn-danger btn-xs", method: :delete  %>
    </li>
    <p><%= d.description %></p>
    <% end %>
  </ul>
  <div>
    <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary", id: "ingredient-add-button"%>
    <%= link_to "Go back", cocktails_path, class: "card-link" %>
  </div>
</div>
